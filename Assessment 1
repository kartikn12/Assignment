#include<stdio.h>

addition(int a,int b)
{
	printf("\nYour addition is %d\n",a+b);
}

subtraction(int a,int b)
{
	printf("Your subtraction is %d\n",a-b);
}

multipication(int a,int b)
{
	printf("Your multipication is %d\n",a*b);
}

divison(int a,int b)
{
	printf("Your divison is %d\n",a/b);
}



int main()
{
	while(1)
	{
		int ch;
		printf("---------------MENU----------------\n\n");
		printf("1.Addition \n");
		printf("2.Subtraction \n");
		printf("3.Multipication \n");
		printf("4.Divison \n");
		printf("\nEnter your Choice :");
		scanf("%d",&ch);
		
		
		
		if(ch==1)
		{
		int a,b;
		printf("\nEnter First Number: ");
		scanf("%d",&a);
		printf("Enter Second Number:");
		scanf("%d",&b);	
		addition(a,b);
		break;
		}
	
		else if(ch==2)
		{	
			int a,b;
			printf("\nEnter First Number: ");
			scanf("%d",&a);
			printf("Enter Second Number:");
			scanf("%d",&b);
			subtraction(a,b);
			break;
		}
		else if(ch==3)
		{
			int a,b;
			printf("\nEnter First Number: ");
			scanf("%d",&a);
			printf("Enter Second Number:");
			scanf("%d",&b);
			multipication(a,b);
			break;
		}
		else if(ch==4)
		{
			int a,b;
			printf("\nEnter First Number: ");
			scanf("%d",&a);
			printf("Enter Second Number:");
			scanf("%d",&b);
			divison(a,b);
			break;
		}
		else{
			printf("Invalid Choice Enter A valid Choice\n");
			
		}
	}
	return 0;
}
